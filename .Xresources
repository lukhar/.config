Xft.dpi: 95

URxvt.depth: 32
URxvt.geometry: 90x30
URxvt.transparent: false
URxvt.fading: 0
! URxvt.urgentOnBell: true
! URxvt.visualBell: true
URxvt.loginShell: true
URxvt.saveLines: 65535

! fix for not filling window
URxvt.internalBorder: 1

! Fonts
! Sharp - no antialiasing...
URxvt*font: xft:xos4 Terminess Powerline:xft:Fixed:antialias=false:size=9
URxvt*boldFont: xft:xos4 Terminess Powerline:xft:style=bold:antialias=false:size=9

! Normal - aliased slightly blurry
!URxvt*font: xft:DejaVu Sans Mono for Powerline:antialias=true:size=9
!URxvt*boldFont: xft:DejaVu Sans Mono for Powerline:style=bold:antialias=true:pixelsize=9

! Fix font space (use only when patched urxvt not installed)
!URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false

! Perl extensions
URxvt.perl-ext-common: default,matcher
URxvt.matcher.button: 1
URxvt.urlLauncher: firefox

! Cursor
URxvt.cursorBlink: true

! Function keys fix for urxvt
URxvt.keysym.F1:   \033OP
URxvt.keysym.F2:   \033OQ

! Solarized dark color scheme
*background:              #002b36
*foreground:              #839496
*cursorColor:             #93a1a1

*fading:                  40
*fadeColor:               #002b36
*pointerColorBackground:  #586e75
*pointerColorForeground:  #93a1a1

! black
*color0:                  #073642
*color8:                  #002b36

! red
*color1:                  #dc322f
*color9:                  #cb4b16

! green
*color2:                  #859900
*color10:                 #586e75

! yellow
*color3:                  #b58900
*color11:                 #657b83

! blue
*color4:                  #268bd2
*color12:                 #839496

! magenta
*color5:                  #d33682
*color13:                 #6c71c4

! cyan
*color6:                  #2aa198
*color14:                 #93a1a1

! white
*color7:                  #eee8d5
*color15:                 #fdf6e3
